@model FlightViewModel

@{
    ViewData["Title"] = "CheckoutFlights";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container my-5">
    <h4 class="mb-4">Ödeme Bilgileri</h4>

    <!-- Uçuş Bilgileri -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Uçuş Özeti</h5>
        </div>
        <div class="card-body">
            <p><strong>Havayolu:</strong> @Model.GetFlightDetailsResponse.AirlineName </p>
            <p><strong>Uçuş Numarası:</strong> @Model.GetFlightDetailsResponse.FlightNumber</p>
            <p><strong>Kalkış:</strong> @Model.GetFlightDetailsResponse.DepartureAirportName - @Model.GetFlightDetailsResponse.DepartureTime.ToString("dd MMMM yyyy, dddd")</p>
            <p><strong>Varış:</strong> @Model.GetFlightDetailsResponse.ArrivalAirportName - @Model.GetFlightDetailsResponse.ArrivalTime.ToString("dd MMMM yyyy, dddd")</p>
            <p><strong>Toplam Fiyat:</strong> @Model.GetFlightDetailsResponse.TotalPrice ₺</p>
        </div>
    </div>

    <!-- Yolcu Bilgileri -->
    <h5 class="mb-3">Yolcu Bilgileri</h5>
    <div id="passenger-info">
        @for (int i = 1; i < Model.GetFlightDetailsResponse.AdultPassengers; i++)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">Yolcu @i sdadsadas$</h6>
                    <div class="mb-3">
                        <label for="passengerName_@i" class="form-label">Ad Soyad</label>
                        <input type="text" class="form-control" id="passengerName_@i" name="passengerName_@i" required>
                    </div>
                    <div class="mb-3">
                        <label for="passportNumber_@i" class="form-label">Pasaport Numarası</label>
                        <input type="text" class="form-control" id="passportNumber_@i" name="passportNumber_@i" required>
                    </div>
                    <div class="mb-3">
                        <label for="birthDate_@i" class="form-label">Doğum Tarihi</label>
                        <input type="date" class="form-control" id="birthDate_@i" name="birthDate_@i" required>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Ödeme Bilgileri -->
    <h5 class="mb-3">Ödeme Bilgileri</h5>
    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-3">
                <label for="cardNumber" class="form-label">Kart Numarası</label>
                <input type="text" class="form-control" id="cardNumber" name="cardNumber" required>
            </div>
            <div class="mb-3 row">
                <div class="col-md-6">
                    <label for="expiryMonth" class="form-label">Son Kullanma Ayı</label>
                    <input type="number" class="form-control" id="expiryMonth" name="expiryMonth" min="1" max="12" required>
                </div>
                <div class="col-md-6">
                    <label for="expiryYear" class="form-label">Son Kullanma Yılı</label>
                    <input type="number" class="form-control" id="expiryYear" name="expiryYear" min="2023" max="2030" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="cvv" class="form-label">CVV</label>
                <input type="text" class="form-control" id="cvv" name="cvv" required>
            </div>
        </div>
    </div>

    <!-- Satın Alma Butonu -->
    <div class="text-center mt-4">        
        <button class="btn btn-primary btn-lg">Ödeme Yap ve Bileti Satın Al</button>
    </div>
</div>

<style>
    .card {
        border: 1px solid #dee2e6;
    }

    .form-label {
        font-weight: bold;
    }
</style>